				description="COM_SCHEDULER_FORM_TEMPLATE_TEXT_DESC"
				hint="COM_SCHEDULER_FORM_TEMPLATE_TEXT_HINT"
				required="true"
				autocomplete="false"
				class="span12"
				rows="5"
		/>
		<field
				name="id"
				type="hidden"
		/>
		<field
				name="managerID"
				type="hidden"
		/>
	</fieldset>
