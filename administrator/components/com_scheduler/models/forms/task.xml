<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_scheduler/models/rules">
	<fieldset name="general">
		<field
				name="date_task"
				type="calendar"
				label="COM_SCHEDULER_FORM_TASK_DATE_TASK_LABEL"
				description="COM_SCHEDULER_FORM_TASK_DATE_TASK_DESC"
				filter="none"
				class="span12"
				format="%d.%m.%Y"
				required="true"
				onchange="getActiveTaskCount()"
		/>
		<field
				name="managerID"
				type="Manager"
				label="COM_SCHEDULER_FORM_TASK_EXECUTOR_LABEL"
				description="COM_SCHEDULER_FORM_TASK_EXECUTOR_DESC"
				class="span12"
		/>
		<field
				name="template_task"
				type="TemplateTask"
				label="COM_SCHEDULER_FORM_TASK_TEMPLATE_TASK_LABEL"
				description="COM_SCHEDULER_FORM_TASK_TEMPLATE_TASK_DESC"
				onchange="fromTemplate('task')"
				class="span12"
		>
				<option value="">COM_SCHEDULER_FORM_TASK_TEMPLATE_DEFAULT</option>
		</field>
		<field
				name="task"
				type="textarea"
				label="COM_SCHEDULER_FORM_TASK_TASK_LABEL"
				description="COM_SCHEDULER_FORM_TASK_TASK_DESC"
				hint="COM_SCHEDULER_FORM_TASK_TASK_HINT"
				required="true"
				class="span12"
				rows="5"
		/>
		<field
				name="template_result"
				type="TemplateResult"
				label="COM_SCHEDULER_FORM_TASK_TEMPLATE_RESULT_LABEL"
				description="COM_SCHEDULER_FORM_TASK_TEMPLATE_RESULT_DESC"
				onchange="fromTemplate('result')"
				class="span12"
		>
			<option value="">COM_SCHEDULER_FORM_TASK_TEMPLATE_DEFAULT</option>
		</field>
		<field
				name="result"
				type="textarea"
				label="COM_SCHEDULER_FORM_TASK_RESULT_LABEL"
				description="COM_SCHEDULER_FORM_TASK_RESULT_DESC"
				hint="COM_SCHEDULER_FORM_TASK_RESULT_HINT"
				class="span12"
				rows="5"
		/>
		<field
				name="id"
				type="hidden"
		/>
		<field
				name="contractID"
				type="hidden"
		/>
	</fieldset>
	<fieldset name="meet">
		<field
				name="type"
				type="list"
				label="COM_SCHEDULER_FORM_TYPE_LABEL"
				description="COM_SCHEDULER_FORM_TYPE_DESC"
				class="span12"
				onchange="switchType(this.value);"
				default="task"
		>
			<option value="task">COM_SCHEDULER_FORM_TYPE_TASK</option>
			<option value="meet">COM_SCHEDULER_FORM_TYPE_MEET</option>
		</field>
		<field
				name="contactID"
				type="Contact"
				label="COM_SCHEDULER_FORM_CONTACT_LABEL"
				description="COM_SCHEDULER_FORM_CONTACT_DESC"
				class="span12"
		/>
		<field
				name="theme"
				type="textarea"
				label="COM_SCHEDULER_FORM_THEME_LABEL"
				description="COM_SCHEDULER_FORM_THEME_DESC"
				hint="COM_SCHEDULER_FORM_THEME_HINT"
				readonly="true"
				class="span12"
				autocomplete="false"
		/>
		<field
				name="place"
				type="text"
				label="COM_SCHEDULER_FORM_PLACE_LABEL"
				description="COM_SCHEDULER_FORM_PLACE_DESC"
				hint="COM_SCHEDULER_FORM_PLACE_HINT"
				readonly="true"
				class="span12"
				autocomplete="false"
		/>
		<field
				name="taskID"
				type="hidden"
		/>
	</fieldset>
</form>