<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
				name="search"
				type="text"
				hint="COM_MKV_FILTER_SELECT_MANAGER"
				autocomplete="off"
				class="js-stools-search-string"
		/>
		<field
				name="manager"
				type="Manager"
				onchange="this.form.submit();"
				>
			<option value="">COM_MKV_FILTER_SELECT_MANAGER</option>
		</field>
		<field
				name="status"
				type="list"
				onchange="this.form.submit();"
				default=""
		>
			<option value="">COM_MKV_FILTER_SELECT_STATUS</option>
			<option value="-2">COM_MKV_TASK_STATUS_-2</option>
			<option value="1">COM_MKV_TASK_STATUS_1</option>
			<option value="2">COM_MKV_TASK_STATUS_2</option>
			<option value="3">COM_MKV_TASK_STATUS_3</option>
		</field>
	</fields>
	<fields name="list">
		<field
				name="fullordering"
				type="hidden"
		/>
		<field
				name="limit"
				type="limitbox"
				class="input-mini"
				default="0"
				onchange="this.form.submit();"
		/>
	</fields>
</form>